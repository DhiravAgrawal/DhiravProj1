<% layout("/layouts/boilerplate.ejs") %>
<br>
<h2>Enter Location</h2>

<div class="row mt-3">
<div class="col-8 offset-2">
    <form action="/home/roads?_method=POST" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3 col">
            <label for="title" class="form-label" >Road Data</label>
            <input type="text" name="location[name]" value = "<%= listing.title %>" class="form-control" required>
            <div class="valid-feedback">looks good</div>
        </div>
        <div class="mb-3 col">
            <label for="description" class="form-label" >Latitude</label>
            <input type="number" name="location[latitude]" value = "<%= listing.description %>" class="form-control" required>
            <div class="invalid-feedback">Please enter valid data</div>
        </div>
        <div class="mb-3 ">
            <label for="location" class="form-label" >Longitude</label>       
            <input type="number" name="location[longitude]" value = "<%= listing.location %>" class="form-control" required>
            <div class="invalid-feedback">Please enter valid data</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Submit</button> 
        <!-- <br><br> -->
        </div>
</div>